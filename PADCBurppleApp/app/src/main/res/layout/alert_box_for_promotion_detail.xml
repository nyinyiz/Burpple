<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/iv_promotion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="#76000000"
                android:src="@drawable/promotion_placeholder"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|bottom"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@drawable/bg_round_yellow"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="@dimen/margin_small"
                    android:text="BURPPLE EXCLUSIVE"
                    android:textColor="@color/pure_white"
                    android:textSize="@dimen/text_regular"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_promotion_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:layout_marginRight="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="1-for-1 Shabu Burger"
                    android:textColor="@color/pure_white"
                    android:textSize="@dimen/text_heading_1x"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_promotion_untile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:layout_marginRight="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium_2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Till 31st jan '18"
                    android:textAllCaps="true"
                    android:textColor="@color/pure_white"
                    android:textSize="@dimen/text_regular"
                    android:textStyle="bold" />

            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/light_yellow"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin_medium"
            android:paddingLeft="@dimen/margin_medium_2"
            android:paddingRight="@dimen/margin_medium_2"
            android:paddingTop="@dimen/margin_medium">

            <TextView
                android:id="@+id/tv_promotion_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/txt_meal_name"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_promotion_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Kent Ridge"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/text_regular" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium_2"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="@dimen/text_regular"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_promotion_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/guide_detail"
                    android:textSize="@dimen/text_regular"
                    android:textColor="@color/primary_text"/>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>