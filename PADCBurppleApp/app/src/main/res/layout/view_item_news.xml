<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/pure_white"
    app:cardElevation="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:paddingTop="@dimen/margin_medium_2">

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:text="Newly Opened"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_news_detail1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/tv_news_title"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:src="@drawable/guide_placeholder" />

        <TextView
            android:id="@+id/tv_news_details1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_news_detail1"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/iv_news_detail1"
            android:text="Sushi Kimura"
            android:textColor="@color/pure_dark"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_news_detail2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/iv_news_detail1"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:src="@drawable/guide_placeholder" />

        <TextView
            android:id="@+id/tv_news_details2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_news_detail3"
            android:layout_alignStart="@+id/tv_news_details1"
            android:text="Sushi Kimura"
            android:textColor="@color/pure_dark"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_news_detail3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/iv_news_detail2"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:src="@drawable/guide_placeholder" />

        <TextView
            android:id="@+id/tv_news_details3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/v_news_details1"
            android:layout_alignStart="@+id/tv_news_details2"
            android:text="Sushi Kimura"
            android:textColor="@color/pure_dark"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold" />

        <View
            android:id="@+id/v_news_details1"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_below="@id/iv_news_detail3"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:background="@color/divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_news_details1"
            android:layout_margin="@dimen/margin_medium"
            android:text="EXPLORE"
            android:textColor="@color/secondary_text" />

    </RelativeLayout>
</android.support.v7.widget.CardView>