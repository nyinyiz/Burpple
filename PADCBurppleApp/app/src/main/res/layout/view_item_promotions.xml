<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium"
    app:cardElevation="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:weightSum="4">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/iv_promotion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="#41000000"
                android:src="@drawable/promotion_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_vertical|center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@drawable/bg_round_yellow"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="@dimen/margin_small"
                    android:text="BURPPLE EXCLUSIVE"
                    android:textColor="@color/pure_white"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_promotion_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:layout_marginRight="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="1-for-1 Shabu Burger"
                    android:textColor="@color/pure_white"
                    android:textSize="@dimen/text_regular_2x"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/tv_promotion_untile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:layout_marginRight="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Till 31st jan '18"
                    android:textAllCaps="true"
                    android:textColor="@color/pure_white"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/light_yellow"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_medium"
            android:paddingLeft="@dimen/margin_medium_2"
            android:paddingRight="@dimen/margin_medium_2"
            android:paddingTop="@dimen/margin_medium">

            <TextView
                android:id="@+id/tv_promotion_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/txt_meal_name"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_promotion_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Kent Ridge"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/text_smaller" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>